<h1 class="center-text">Todoist</h1>

<%= render 'new', list: @list %>

<div class="medium-12 columns">
  <ul id="masonry-container" data-masonry-options='{ "isFitWidth": true }' class="transitions-enabled infinite-scroll clearfix">
    <% @lists.each do |list| %>
    <div class="box col3 end">
    <%= link_to list_path(list), class: 'no-style ref' do %>
      <div class="card">
        <div class="content">
        <a href="<%= list_url(list) %>" title="Copy to clipboard" class="copy cornered" style="right: 30px; vertical-align: -webkit-baseline-middle;"><%= fa_icon 'link' %></a>
          <%= render 'destroy', list: list, size: 1 %>
          <span class="title"><%= list.name %></span>
          <br>
          <br>

          <%= render 'tasks/index_preview', list: list %>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </ul>
</div>